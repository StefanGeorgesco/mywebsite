<?xml version="1.0" encoding="utf-8" ?>
<routes>
    <route url="/API/login-check\?login=\S*" module="Member" action="checkLogin" ></route>
    <route url="/API/member" module="Member" action="member" ></route>
    <route url="/API/members(?:\?.*)?" module="Member" action="members"></route>
    <route url="/API/members/(\d+)" module="Member" action="members" vars="id"></route>
    <route url="/API/news(?:\?.*)?" module="News" action="news"></route>
    <route url="/API/news/(\d+)" module="News" action="news" vars="id"></route>
    <route url="/API/news/(\d+)/comments(?:\?.*)?" module="News" action="comments" vars="newsId"></route>
    <route url="/API/news/(\d+)/comments/(\d+)" module="News" action="comments" vars="newsId,id"></route>
</routes>
